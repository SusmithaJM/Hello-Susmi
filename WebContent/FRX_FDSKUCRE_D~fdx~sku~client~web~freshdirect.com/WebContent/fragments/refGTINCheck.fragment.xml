<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>REFERENCE_GTIN_CHECK}">
		<content>
			<l:Grid defaultSpan="L12 M12 S12" class="gridClass">
				<l:content>
					<RadioButtonGroup id="refGtinRadioBtnId" width="100%" class="sapUiMediumMarginBottom" select="onRefGtinSelect">
						<buttons>
							<RadioButton text="{i18n>REACTIVATE_SKU}"/>
							<RadioButton text="{i18n>SEASONAL_SKU}" />
							<RadioButton text="{i18n>OTHER_SKU}" />
						</buttons>
					</RadioButtonGroup>
				</l:content>
			</l:Grid>
		</content>
		<buttons>
			<Button text="{i18n>OK}" type="Accept" press="onOKRefGtinCheck" />
			<Button text="{i18n>CANCEL}" type="Reject" press="onCancelRefGtinCheck" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>