<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover title="New Manufacturer" placement="Top">
		<content>
			<Input value="{oDashboardTabModel>/ideationDto/newManufacturerValue}"></Input>
		</content>
		<Toolbar class="sapUiSizeCompact">
			<ToolbarSpacer/>
			<core:Icon src="sap-icon://accept" press="onAddNewManufacturer"/>
			<core:Icon src="sap-icon://decline" press="onRejectNewManufacturer"/>
		</Toolbar>
	</Popover>
</core:FragmentDefinition>